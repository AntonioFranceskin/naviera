<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Company Name </th>
      <th>Rif</th>
      <th>Status</th>
      <th>Tipo de Compania</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.company_name %></td>
        <td><%= company.rif %></td>
        <td><%= company.status %></td>
        <td><%= company.type_company %></td>
      </tr>
    <% end %>
  </tbody>
</table>
