<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>Name </th>
      <th>LastName </th>
      <th>Rif</th>
      <th>Tipo de Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.lastname %></td>
        <td><%= client.rif %></td>
        <td><%= client.type_client %></td>
      </tr>
    <% end %>
  </tbody>
</table>
